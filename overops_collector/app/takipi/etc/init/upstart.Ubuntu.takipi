description "Takipi daemon"

env NAME=takipi
env DIR=/opt/takipi/bin
env IMAGE_NAME=takipi-service
env DAEMON_ARGS="--daemon"
env PIDFILE=/var/run/takipi.pid

start on filesystem or runlevel [2345]
stop on runlevel [!2345]



exec start-stop-daemon --chuid root --start --quiet --make-pidfile --pidfile $PIDFILE --exec $DIR/$IMAGE_NAME -- --selfrestart --noforkdaemon

respawn