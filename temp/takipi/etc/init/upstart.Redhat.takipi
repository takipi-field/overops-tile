description "Takipi daemon"

env NAME=takipi
env DIR=/opt/takipi/bin
env IMAGE_NAME=takipi-service
env DAEMON_ARGS="--daemon"
env PIDFILE=/var/run/takipi.pid

start on stopped rc RUNLEVEL=[2345]
stop on starting runlevel [016]



exec $DIR/$IMAGE_NAME --selfrestart --noforkdaemon --pidfile=$PIDFILE

respawn